{
  "extends": [
    "config:base"
  ],
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "packageRules": [
    {
      "groupName": "k8s.io (major or minor)",
      "matchPackageNames": [
        "k8s.io/api",
        "k8s.io/apimachinery",
        "k8s.io/client-go"
      ],
      "matchUpdateTypes": ["patch"],
      "enabled": false
    }
  ]
}
